<div class="cart">
	<div class="container">
		<div class="cart-top">
			<%= link_to "<< home", root_path %>
		</div>

		<div class="col-md-9 cart-items cart-box"> 
			<table class="table table-striped table-hover">
				<h2>My Cart (<%= @cart.count_all %>)</h2>
				<% @items.each do |item| %>
				<tr><td>
					<div class="cart-header">
						<div class="cart-item-info">
							<h3>Loan Request ID #<%= item.id %><span></span></h3>
							Requested by: <%= link_to item.user.username, "/#{item.user.username}/loan_requests/" %>
							<%= button_to "X", cart_item_path(item), class: "btn btn-warning btn-xs", method: :delete %>
						</div>
						<h4>Loan Amount: <%= number_to_currency(item.amount) %></h4>
						<h4>Maximum Interest Rate: <%= item.max_int_rate %>% </h4>
					</div>
				</td>
			</tr>
			<% end %>
		</table>
	</div>

<div class="col-md-3 total-box">
	<div class="cart-total">
		<div class="price-details">
			<h3>Price Details</h3>
			<span><%= @cart.count_all %> Loan Requests</span>
			<div class="clearfix"></div>
		</div>
		<span class="total final"><h4 class="last-price">TOTAL: <%= number_to_currency(@cart.total_price) %>
			<div class="clearfix"></div>


			<% if current_user %>
			<% if @cart.contents.empty? %>
			<% else %>
			<%= button_to "Place Order", orders_path, class: "order" %>
			<% end %>
			<% else %>
			<%= button_to "Login to Checkout", login_path, method: :get, class:"order" %>
			<% end %>

		</div>
	</div>
</div></div>