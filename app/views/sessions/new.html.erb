<div id="container">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :username, "Username: " %>
    <%= f.text_field :username, placeholder: "Username", type: "name" %>
    <%= f.label :username, "Password: " %>
    <p><%= link_to "Forgot your password?", new_password_reset_path %></p>
    <%= f.password_field :password, placeholder: "Password", class:"form-control" %><br />
    <%= f.submit "Log in", class:"btn btn-primary" %>
    <%= label_tag :remember_me %>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  <% end %>
</div>
