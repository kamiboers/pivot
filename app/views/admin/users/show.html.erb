<div class="container">
	<div class="row user-dashboard">
		<h1>Administrator Dashboard, Logged in as <%= @user.first_name %></h1>
		<div class="col-md-3">
			<%= image_tag @user.image_path, size: "150" %>
		</div>
		<div class="col-md-4 stats">
      <table class="table table-striped table-bordered">
        <tr>

          <td><b>Site Wide Statistics</b></td>
          <td><b>#</b></td>
        </tr>
        <tr>
          <td>Active Users</td>
          <td><%= User.active_users %></td>
        </tr>
        <tr>
          <td>Inactive Users</td>
          <td><%= User.inactive_users %></td>
        </tr>
        <tr>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td>Active Loan Offers</td>
          <td><%= LoanOffer.active_loan_offers %></td>
        </tr>
        <tr>
          <td>Completed Loan Offers</td>
          <td>23</td>
        </tr>
        <tr>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td>Active Loan Requests</td>
          <td><%= LoanRequest.active_loan_requests %></td>
        </tr>
        <tr>
          <td>Completed Loan Requests</td>
          <td>13</td>
        </tr>
      </table>
    </div>
		<div class="col-md-3">
			<a href="#" id="show-admin-sitewide-nav">Site Wide Links</a> |
			<a href="#" id="show-admin-user-nav">Profile Links</a>
    <div class="user-menu full-site-nav">
			<nav>
				<ul class="nav nav-pills nav-stacked nav-admin">
          <li role="presentation"><%= link_to "View All Loan Requests", loan_requests_path %></li>
          <li role="presentation"><%= link_to "View All Loan Offers", loan_offers_path %></li>
          <li role="presentation"><%= link_to "View All Users", users_path %></li>
				</ul>
			</nav>
		</div>
		<div class="user-menu admin-user-nav hidden">
			<nav>
				<ul class="nav nav-pills nav-stacked nav-admin">
					<li role="presentation"><a href="#">Edit My Profile</a></li>
					<li role="presentation"><%= link_to "Create a Loan Offer", new_loan_offer_path %></li>
					<li role="presentation"><%= link_to "Create a Loan Request", new_loan_request_path %></li>
					<li role="presentation"><%= link_to "View My Loan Offers", user_loan_offers_path(@user.username) %></li>
					<li role="presentation"><%= link_to "View My Loan Requests", user_loan_requests_path(@user.username) %></li>
				</ul>
			</nav>
		</div>
	</div>
	</div>
</div>
