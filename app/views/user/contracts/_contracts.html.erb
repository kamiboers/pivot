<div class="row">
  <div class="col-md-5">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h4>As a <%= lender %>:</h4>
      </div>
      <% contracts.each do |b| %>
        <% present(b) do |contract| %>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            Lender: <%= contract.full_name("lender") %>
          </li>
          <li class="list-group-item">
            Borrower: <%= contract.full_name("borrower") %>
          </li>
          <li class="list-group-item">
            Amount: <%= contract.amount(request_or_offer) %>
          </li>
          <li class="list-group-item">
            Term: <%= contract.months(request_or_offer) %>
          </li>
          <li class="list-group-item">
            Rate: <%= contract.ir(request_or_offer) %>
          </li>
          <li class="list-group-item">
            Status: <%= contract.status %>
          </li>
        </ul>
        <div class="panel-footer">
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
