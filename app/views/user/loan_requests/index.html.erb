<div class="mainbody">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h2><%= @user.username.capitalize %>'s Loan Requests:</h2>
      </div>
    </div>
    <div class="row">
      <% @loan_requests.each_slice(4) do |loans| %>
      <div class="row">
        <% loans.each.with_index(1) do |loan, index | %>
        <% if index == 1 %>
        <div class="col-md-2 col-md-offset-2">
        <% else %>
        <div class="col-md-2">
        <% end %>
          <div class="list-group">
            <div class="list-group-item">
              <h4 class="list-group-item-heading">Request ID #<%= loan.id %></h4>
            </div>
            <div class="list-group-item">
              <h4 class="list-group-item-heading">Amount:</h4>
              <p class = "list-group-item-text"><%= number_to_currency(loan.amount) %></p>
            </div>
            <div class="list-group-item">
              <h4 class="list-group-item-heading">Rate:</h4>
              <p class="list-group-item-text"><%= loan.rate %></p>
            </div>
            <div class="list-group-item">
              <%= link_to "View Details", user_loan_request_path(username: @user.username, id: loan) %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
